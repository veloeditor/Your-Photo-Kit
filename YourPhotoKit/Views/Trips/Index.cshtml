@model IEnumerable<YourPhotoKit.Models.Trip>

@{
    ViewData["Title"] = "Index";
}

<h3>Your Trips</h3>

<p>
    <a asp-action="Create">Add a new trip</a>
</p>


@if (Model.ToList().Count == 0)
{
    <p>You currently do not have any trips to show. A trip and pack some gear!</p>
}
else
{

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserComments)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserComments)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.TripId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.TripId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.TripId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
