@model YourPhotoKit.Models.GearItem

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>GearItem</h4>
    <hr />
    <div class="card-deck">
        <div class="card">
            <div></div>
            <div class="card-body">
                <h4 class="card-title" style="margin-bottom: 5px;">@Html.DisplayFor(model => model.Title)</h4>
                <h6>@Html.DisplayFor(model => model.gearType.Label)</h6>
                <p class="card-text">
                    @Html.DisplayFor(model => model.Description)
                </p>
                <p class="card-text">
                    @Html.DisplayFor(model => model.Cost)
                </p>
                <p class="card-text">
                    @Html.DisplayFor(model => model.DatePurchased)
                </p>
                <p class="card-text">
                    @Html.DisplayFor(model => model.SerialNumber)
                </p>
            </div>
            <div class="card-footer"
                <small>
                    <a asp-action="Edit" asp-route-id="@Model.GearItemId">Edit</a> |
                    <a asp-action="Index">Back to List</a>
                </small>
            </div>
        </div>
    </div>

