@model IEnumerable<YourPhotoKit.Models.GearItem>

@{
    ViewData["Title"] = "Index";
}

<h2 style="text-align: center; margin-bottom: 0px;">Your Photo Kit</h2>
<p style="text-align: center">Here is a list of your gear. Ad some more today!</p>

<p style="text-align: center">
    <a asp-action="Create" style="text-align: center">Add Gear</a>
</p>

@if (Model.ToList().Count == 0)
{
    <p> Let's add some gear to your kit!  Click the link above to add some new gear.</p>
}
else
{
<div> 
    <div>
        @foreach (var item in Model)
        {
            <div class="card-deck" style="max-width: 700px; margin:auto">
                <div class="card">
                <div></div>
                    <div class="card-body">
                        <h4 class="card-title" style="margin-bottom: 5px;">@Html.DisplayFor(modelItem => item.Title)</h4>
                        <h6>@Html.DisplayFor(modelItem => item.gearType.Label)</h6>
                        <p class="card-text">
                            @Html.DisplayFor(modelItem => item.Description)
                        </p>
                        <div class="card-footer">
                            <small class="text-muted">
                                <a asp-action="Details" asp-route-id="@item.GearItemId">Details</a> | 
                                <a asp-action="Edit" asp-route-id="@item.GearItemId">Edit</a> |
                                
                                <a asp-action="Delete" asp-route-id="@item.GearItemId">Delete</a>
                            </small>
                        </div>
                    </div>
                </div>
            </div>

        }
        
    </div>
</div>
}
